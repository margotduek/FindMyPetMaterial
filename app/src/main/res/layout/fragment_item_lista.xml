<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/listadeperros_item">

    <TextView
        android:text="Nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textnombreperrito"
        />


    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/fotoperrito"
        android:src="@drawable/paw"
        android:layout_below="@+id/textnombreperrito"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>


    <TextView
        android:text="Característica del perrito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textocaracteristica"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Ubicación"
        android:id="@+id/btn_ubicacion"
        android:layout_below="@+id/textocaracteristica"
        android:layout_alignStart="@+id/textocaracteristica"
        android:layout_alignLeft="@+id/textocaracteristica"/>


</RelativeLayout>